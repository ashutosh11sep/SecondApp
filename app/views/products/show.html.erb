<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>
 
<p>
  <strong>Location:</strong>
  <%= @product.location %>
</p>

<p>
  <strong>Category_id:</strong>
  <%= @product.category.name %>
</p>

<p>
  <strong>Images:</strong>
  <%=image_tag  @product.images %>
</p>

<p>
  <strong>User_id:</strong>
  <%= @product.user.email %>
</p>


<h2>Comments</h2>
<% @product.comments.each do |comment| %>
<p>
  <strong>Commenter:</strong>
  <%= comment.title %>
</p>
 
<p>
  <strong>Comment:</strong>
  <%= comment.comment %>
</p>
<p>
<%= comment.user.email %>
</p>
<% end %>
 
<h2>Add a comment:</h2>
 <%# form_for @comment, url: "/rakesh" do |f| %>
  <%= form_for([@product, @product.comments.build]) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>